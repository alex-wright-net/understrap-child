{
  "browserSyncOptions" : {
    "proxy": "https://local-project.com",
    "notify": true,
    "https": {
      "key": "/usr/local/etc/apache2/2.4/localhost.key.pem",
      "cert": "/usr/local/etc/apache2/2.4/localhost.crt.pem"
    } 
  },
  "browserSyncWatchFiles" : [
    "./css/*.min.css",
    "./js/*.min.js",
    "./**/*.php"
  ],
  "paths" : {
    "js": "./js",
    "custom_js":"./custom-scripts",
    "css": "./css",
    "img": "./img",
		"imgsrc": "./src/img",
    "sass": "./sass",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./src",
    "dist": "./dist",
    "distprod": "./dist-product",
    "vendor": ""
  }
}
